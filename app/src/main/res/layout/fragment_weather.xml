<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/fragment_container"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffa500"
    tools:context=".weathe_app" >


    <TextView
        android:id="@+id/city_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center"
        android:textSize="30dp" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/et1"
        android:hint="Введите город"
        android:layout_below="@+id/updated_field"
        android:layout_alignEnd="@+id/imV2"
        android:layout_marginTop="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/btn1"
        android:drawableTint="@drawable/find"
        android:background="@drawable/find"
        android:layout_alignTop="@+id/et1"
        android:layout_toEndOf="@+id/et1" />

    <TextView
        android:id="@+id/updated_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/city_field"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp"
        android:gravity="center"
        android:textColor="#ffffff" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/imV2"
        android:layout_below="@+id/current_temperature_field"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/current_temperature_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="75dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:layout_below="@+id/et1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/details_field"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_below="@+id/imV2"
        android:layout_alignParentStart="true" />

</RelativeLayout>